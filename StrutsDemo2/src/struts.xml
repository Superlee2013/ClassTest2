<struts>
    <!--<package name="struts2" extends="struts-default">
            <interceptors>
                    <interceptor name="loginInterceptor" class="com.struts2Login.interceptor"></interceptor>
                    <interceptor-stack name="myDefaultInterceptorStack"></interceptor-stack>

            </interceptors>
